#include <iostream>
#include <cstdio>
using namespace std;

int main()
{
    int n,numero_actual,suma;
    cout <<"Introduzca el valor n; ";
    cin  >>n;
    numero_actual=1; suma=0;
    while (numero_actual<=n)
   {
    if(numero_actual%2==0)
    {
        suma=suma+numero_actual;
    }
    numero_actual++;
   }
    cout<<"La suma es "<<suma;
    return 0;
}
